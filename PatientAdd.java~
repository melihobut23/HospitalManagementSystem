		addButton.setFont(new java.awt.Font("Tahoma", 1, 12)); // NOI18N
		addButton.setText("ADD");
		addButton.addActionListener(new java.awt.event.ActionListener() {
			public void actionPerformed(java.awt.event.ActionEvent evt) {
				// addButtonActionPerformed(evt);
				String id = jLabel2.getText();
				String nameSurname = name.getText();
				String gender = genderComboBox.getSelectedItem().toString();
				String birth = birthDate.getText();
				long phoneNum = Long.parseLong(phoneNumber.getText());
				String adress = address.getText();

				try {
					pst = con.prepareStatement("insert into patient(patientid, namesurname, gender, birthdate, phone, adress)values(?,?,?,?,?,?)");
					pst.setString(1, id);
					pst.setString(2, nameSurname);
					pst.setString(3, gender);
					pst.setString(4, birth);
					pst.setLong(5, phoneNum);
					pst.setString(6, adress);
					pst.executeUpdate();

					JOptionPane.showMessageDialog(null, "patient inserted");

					getAutoId();
					name.setText("");
					genderComboBox.setSelectedIndex(-1);
					birthDate.setText("");
					phoneNumber.setText("");
					address.setText("");
					name.requestFocus();
					patientTable();

				} catch (SQLException e) {
					// TODO Auto-generated catch block
					e.printStackTrace();
				}
			}
		});

		deleteButton.setBackground(new java.awt.Color(51, 102, 255));
