	 * if the mouse clicked it gives opportunity the update
	 */
	private void jTable1MouseClicked(java.awt.event.MouseEvent evt) {
		DefaultTableModel d1 = (DefaultTableModel) jTable1.getModel();
		int index = jTable1.getSelectedRow();
		jLabel2.setText(d1.getValueAt(index, 0).toString());
		name.setText(d1.getValueAt(index, 1).toString());
		genderComboBox.setSelectedItem(d1.getValueAt(index, 2).toString());
		birthDate.setText(d1.getValueAt(index, 3).toString());
		phoneNumber.setText(d1.getValueAt(index, 4).toString());
		address.setText(d1.getValueAt(index, 5).toString());
	}



