							+ birth + "'" + ", phone = " + phoneNum + ", adress = " + "'" + 
							adress + "'" +" WHERE patientid = " +"'"+ id.toString()+"'" );
					pst.executeUpdate();

					JOptionPane.showMessageDialog(null, "patient updated!");

					getAutoId();
					name.setText("");
					genderComboBox.setSelectedIndex(-1);
